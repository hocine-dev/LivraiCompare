<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des questions/réponses de la FAQ
    const faqButtons = document.querySelectorAll('.faq-section button');
    
    faqButtons.forEach(button => {
        button.addEventListener('click', () => {
            const answer = button.parentNode.nextElementSibling;
            const icon = button.querySelector('svg');
            
            // Vérifier si la réponse est visible
            const isExpanded = answer.classList.contains('block');
            
            // Masquer toutes les réponses et réinitialiser les icônes
            document.querySelectorAll('.faq-section dd').forEach(dd => {
                dd.classList.remove('block');
                dd.classList.add('hidden');
            });
            
            document.querySelectorAll('.faq-section svg').forEach(svg => {
                svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />';
            });
            
            // Si la réponse était cachée, l'afficher
            if (!isExpanded) {
                answer.classList.remove('hidden');
                answer.classList.add('block');
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" transform="rotate(180 12 12)" />';
            }
        });
    });
});
</script>
