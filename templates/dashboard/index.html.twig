{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - ShipCompare Algérie{% endblock %}

{% block header %}
<header class="sticky top-0 z-50 border-b bg-background/95 backdrop-blur">
    <div class="container flex h-16 items-center justify-between">
        <div class="flex items-center gap-2 font-bold text-xl">
            <i class="fas fa-truck text-emerald-600"></i>
            <span>ShipCompare Algérie</span>
        </div>
        <div class="flex items-center gap-4">
            <form class="relative hidden md:block">
                <i class="fas fa-search absolute left-2.5 top-2.5 h-4 w-4 text-muted-foreground"></i>
                <input type="search" placeholder="Rechercher..." class="flex h-9 w-full rounded-md border border-input bg-background px-3 py-1 pl-8 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:w-80 lg:w-96">
            </form>
            <button type="button" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 relative">
                <i class="fas fa-bell h-5 w-5"></i>
                <span class="absolute -right-1 -top-1 flex h-4 w-4 items-center justify-center rounded-full bg-emerald-600 text-[10px] font-medium text-white">
                    3
                </span>
            </button>
            <div class="relative">
                <button type="button" id="user-menu-button" class="inline-flex items-center justify-center rounded-full text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9">
                    <img
                        src="{{ asset('images/avatar.jpg') }}"
                        width="32"
                        height="32"
                        class="rounded-full"
                        alt="Avatar"
                    />
                </button>
                <div id="user-menu" class="absolute right-0 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                    <div class="py-1" role="none">
                        <span class="block px-4 py-2 text-sm text-gray-700 font-medium">Mon compte</span>
                        <div class="border-t border-gray-100"></div>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">
                            <i class="fas fa-user mr-2 h-4 w-4"></i>
                            <span>Profil</span>
                        </a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">
                            <i class="fas fa-cog mr-2 h-4 w-4"></i>
                            <span>Paramètres</span>
                        </a>
                        <div class="border-t border-gray-100"></div>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">
                            <i class="fas fa-sign-out-alt mr-2 h-4 w-4"></i>
                            <span>Déconnexion</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<div class="flex flex-1">
    <aside class="hidden w-64 border-r bg-gray-50/50 lg:block">
        <div class="flex h-full flex-col gap-2 p-4">
